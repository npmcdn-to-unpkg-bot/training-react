{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
      "mocha": true
  },
  "globals": {
    "expect": false,
    "sinon": false
  },
  "rules": {
    "arrow-body-style": 0,
    "comma-dangle": 0,
    "no-use-before-define": ["error", { "functions": false }],
    "react/no-multi-comp": 0,
    "react/prefer-stateless-function": 0,
    "react/prefer-es6-class": 0
  }
}
